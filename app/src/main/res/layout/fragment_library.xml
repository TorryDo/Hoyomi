<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.libraryFragment">

    <View
        android:id="@+id/lib_view1_top"
        android:layout_width="0dp"
        android:layout_height="90dp"

        android:layout_margin="13dp"
        android:background="@drawable/round_corner_all"
        android:backgroundTint="@color/white_orange"
        android:gravity="center"

        app:layout_constraintEnd_toStartOf="@id/lib_view2_top"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lib_lottie_tadah"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/custom_image_icon_tadah_blue"

        app:layout_constraintBottom_toBottomOf="@id/lib_view1_top"
        app:layout_constraintEnd_toEndOf="@id/lib_view1_top"
        app:layout_constraintStart_toStartOf="@id/lib_view1_top"
        app:layout_constraintTop_toTopOf="@id/lib_view1_top"
         />

    <View
        android:id="@+id/lib_view2_top"

        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="13dp"
        android:background="@drawable/round_corner_all"
        android:backgroundTint="@color/white_blue"
        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toEndOf="@id/lib_view1_top"
        app:layout_constraintTop_toTopOf="parent"
        />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lib_lottie_music"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/menhera_love"

            app:layout_constraintEnd_toEndOf="@id/lib_view2_top"
            app:layout_constraintStart_toStartOf="@id/lib_view2_top"
            app:layout_constraintTop_toTopOf="@id/lib_view2_top"
            app:layout_constraintBottom_toBottomOf="@id/lib_view2_top"
             />


    <View
        android:id="@+id/lib_view3_top"

        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="13dp"
        android:background="@drawable/round_corner_all"
        android:backgroundTint="@color/white_blue"
        android:gravity="center"

        app:layout_constraintEnd_toStartOf="@id/lib_view4_top"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lib_view1_top"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lib_lottie_menheraDance"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/menhera_dance"

        app:layout_constraintBottom_toBottomOf="@id/lib_view3_top"
        app:layout_constraintEnd_toEndOf="@id/lib_view3_top"
        app:layout_constraintStart_toStartOf="@id/lib_view3_top"
        app:layout_constraintTop_toTopOf="@id/lib_view3_top"
        />

    <View
        android:id="@+id/lib_view4_top"

        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="13dp"
        android:background="@drawable/round_corner_all"
        android:backgroundTint="@color/white_orange"
        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintStart_toEndOf="@id/lib_view3_top"
        app:layout_constraintTop_toBottomOf="@id/lib_view1_top"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lib_lottie_notifications"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginTop="3dp"
        app:lottie_autoPlay="true"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/notifications"

        app:layout_constraintBottom_toBottomOf="@id/lib_view4_top"
        app:layout_constraintEnd_toEndOf="@id/lib_view4_top"
        app:layout_constraintStart_toStartOf="@id/lib_view4_top"
        app:layout_constraintTop_toTopOf="@id/lib_view4_top"
         />



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lib_album"
        android:layout_width="0dp"
        android:layout_height="230dp"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="@dimen/image_round_corner"
        app:cardElevation="6dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lib_view3_top"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/lib_txt_album"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Playlists"
                android:textColor="@color/black"
                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="@id/lib_txt_create"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/lib_txt_create" />

            <TextView
                android:id="@+id/lib_txt_create"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_corner_all"
                android:backgroundTint="@color/gray"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="@string/create_button"
                android:textStyle="bold|italic"

                app:layout_constraintStart_toEndOf="@id/lib_txt_album"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/lib_txt_viewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/view_all"
                android:textColor="@color/dark_gray"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lib_recyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lib_txt_album"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lib_recyclerView_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:background="@null"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lib_album" />

</androidx.constraintlayout.widget.ConstraintLayout>