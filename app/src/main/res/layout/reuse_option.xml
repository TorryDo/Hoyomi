<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/txt_Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/app_name"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_margin="5dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_Right"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:layout_marginHorizontal="10dp"
        android:visibility="gone"
        android:theme="@style/SCBSwitch"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:orientation="horizontal"
        android:visibility="gone"

        app:layout_constraintTop_toTopOf="@id/txt_Start"
        app:layout_constraintBottom_toBottomOf="@id/txt_Start"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/txt_Option"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="@string/app_name"
            android:textSize="15sp"

            />
        <ImageView
            android:id="@+id/triangle_Icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_bottom_triangle"

            android:focusable="true"
            android:background="@drawable/custom_roundclick"
            android:layout_marginEnd="1dp"
            android:padding="5dp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>