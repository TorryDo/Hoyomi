<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"


    android:transitionName="homeFragment_and_pictureActivity"
    app:layoutDescription="@xml/activity_picture_scene"
    tools:context=".activities.pictureActivity"
    android:id="@+id/picture_motionLayout"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/picture_GL_1_Horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/picture_GL_1z_Horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="-0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/picture_GL_2_Horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/picture_GL_2z_Horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.07" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/picture_GL_3_Horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.07" />


    <LinearLayout
        android:id="@+id/picture_Toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@color/white"
        android:elevation="1dp"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="@id/picture_GL_1_Horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/picture_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"

            android:layout_marginStart="15dp"
            android:padding="5dp"
            android:src="@drawable/temp_back_icon" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:background="@color/white"

        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/picture_GL_2_Horizontal">

        <ImageView
            android:id="@+id/picture_setWallpaper"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="7dp"
            android:padding="@dimen/default_icon_padding"
            android:src="@drawable/ic_image"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toStartOf="@id/picture_download"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/picture_download"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="7dp"
            android:padding="@dimen/default_icon_padding"
            android:src="@drawable/ic_download"
            app:layout_constraintBottom_toBottomOf="parent"


            app:layout_constraintEnd_toStartOf="@id/picture_bookmark"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/picture_setWallpaper"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/picture_bookmark"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="7dp"
            android:padding="@dimen/default_icon_padding"
            android:src="@drawable/ic_bookmark"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toStartOf="@id/picture_menu"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/picture_download"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/picture_menu"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="7dp"
            android:padding="@dimen/default_icon_padding"
            android:src="@drawable/ic_round_menu"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/picture_bookmark"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/picture_ImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@color/white_gray"
        android:scaleType="fitCenter"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_ifinityLoad"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:lottie_rawRes="@raw/ifinity_load"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.motion.widget.MotionLayout>